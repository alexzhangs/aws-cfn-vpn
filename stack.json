      }
    },
    "SSMAdminEmail": {
      "Value": {
        "Ref": "SSMAdminEmail"
      }
    },
    "SSMTimeZone": {
      "Value": {
        "Ref": "SSMTimeZone"
      }
    },
    "L2TPUsername": {
      "Value": {
        "Ref": "L2TPUsername"
      }
    },
    "L2TPPrimaryDNS": {
      "Value": {
        "Ref": "L2TPPrimaryDNS"
      }
    },
    "L2TPSecondaryDNS": {
      "Value": {
        "Ref": "L2TPSecondaryDNS"
      }
    }
  }
}
